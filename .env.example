# Shared environment variables for Python emulator and Elysia API

# Path to the Pokemon ROM file
ROM_PATH=./roms/pokemon_blue.gb

# Path for screenshot sharing between Python emulator and Elysia API
SCREENSHOT_PATH=./data/screenshot.png

# Path for save state persistence
SAVE_STATE_PATH=./data/pokemon.save

# API configuration
API_PORT=3000
API_URL=http://localhost:3000

# Internal API key for Python emulator -> Elysia communication
# Generate a secure random key for production
INTERNAL_API_KEY=changeme

# RTMP streaming URL
# For local testing with mediamtx: rtmp://localhost:1935/live/clawplayspokemon
# For Twitch production: rtmp://live.twitch.tv/app/YOUR_STREAM_KEY
# Leave empty for file-based preview mode
RTMP_URL=rtmp://localhost:1935/live/clawplayspokemon

# Audio volume boost (Game Boy audio is quiet, try 5-15)
AUDIO_VOLUME_BOOST=10.0

# Save state interval in seconds
SAVE_STATE_INTERVAL=300

# File-based preview (fallback when RTMP_URL is empty)
LOCAL_PREVIEW=false
LOCAL_PREVIEW_PATH=./data/preview.png

# Voting configuration
VOTE_WINDOW_DURATION_MS=10000
SCREENSHOT_CACHE_TTL=5
